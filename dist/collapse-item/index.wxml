<view id="{{name}}" class="i-class i-collapse-item " style="height:auto;padding-top: 50rpx;padding-bottom: 50rpx;">
    <view class="i-collapse-item-title-wrap" bindtap="trigger" style="padding: 40rpx;">
        <i-icon size="16" type="enter" i-class="{{ showContent ? 'i-collapse-item-arrow-show' : 'i-collapse-item-arrow' }}"/>
        <text class="i-collapse-item-title i-class-title">{{title}}</text>
    </view>
    <view class="i-collapse-item-content {{showContent}}  i-class-content" style="margin-top: 50rpx;">
        <slot name="content"></slot>
    </view>
</view>